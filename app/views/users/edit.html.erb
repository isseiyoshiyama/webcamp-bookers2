<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h1>User info</h1>
            <!-- ここからvalidationのエラーメッセージ -->
            <div class="error_explanation">
                        <% if @user.errors.any? %>
                            <h3>
                                <%= @user.errors.count %> error prohibited this obj from being saved:
                            </h3>
                            <ul>
                              <% @user.errors.full_messages.each do |message| %>
                              <li>
                                <%= message %>
                              </li>
                              <% end %>
                            </ul>
                        <% end %>
            </div>

            <%= form_with model:@user, local:true do |f| %>

            <div class="mb-3">
              <label for="user_name">Name</label>
              <br>
              <%= f.text_field :name, autofocus: true, id:"user_name", placeholder:"名前"%>
            </div>

            <div class="mb-3 mt-3">
              <label for="inputImage">Image</label>
              <br>
              <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
            </div>

            <div>
              <label for="user_introduction">Introduction</label>
              <br>
              <%= f.text_area :introduction %>
            </div>

            <div class="mt-3 mb-3">
              <%= f.submit "Update User" , class: 'btn btn-secondary ' %>
            </div>

            <% end %>
        </div>

    </div>
</div>